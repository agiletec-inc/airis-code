  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.0",
    "@types/shell-quote": "^1.7.5",
    "@types/yargs": "^17.0.32",
    "eslint": "^8.55.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
