{
  "name": "@airiscode/cli",
  "version": "0.1.0",
  "type": "module",
  "description": "AIRIS Code - Terminal-first autonomous coding runner",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "airis": "./bin/airis"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "coding-assistant",
    "ai",
    "llm",
    "automation",
    "claude",
    "ollama",
    "mcp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/agiletec-inc/airiscode.git",
    "directory": "apps/airiscode-cli"
  },
  "bugs": {
    "url": "https://github.com/agiletec-inc/airiscode/issues"
  },
  "homepage": "https://github.com/agiletec-inc/airiscode#readme",
  "author": "Agiletec Inc.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsx src/index.tsx",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "start": "node dist/index.js",
    "prepublishOnly": "pnpm run build",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@airiscode/core-gemini": "workspace:*",
    "@airiscode/driver-openai": "workspace:*",
    "@airiscode/driver-anthropic": "workspace:*",
    "@airiscode/driver-ollama": "workspace:*",
    "@airiscode/mcp-session": "workspace:*",
    "@airiscode/mcp-registry": "workspace:*",
    "@iarna/toml": "^2.2.5",
    "ansi-regex": "^6.2.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "diff": "^7.0.0",
    "dotenv": "^17.1.0",
    "glob": "^10.4.5",
    "highlight.js": "^11.11.1",
    "ink": "npm:@jrichman/ink@6.4.2",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^9.2.12",
    "lowlight": "^3.3.0",
    "open": "^10.1.2",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "react": "^19.2.0",
    "shell-quote": "^1.8.3",
    "simple-git": "^3.28.0",
